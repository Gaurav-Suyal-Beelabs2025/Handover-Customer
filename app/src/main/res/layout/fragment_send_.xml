<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".Send_Fragment">


     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/_20sdp"
         android:layout_marginHorizontal="@dimen/_16sdp"
         android:background="@drawable/pick_up_drawable"
         app:layout_constraintTop_toTopOf="parent">



          <ImageView
              android:id="@+id/img_arrw_back"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:src="@drawable/arrow_back"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_marginStart="@dimen/_15sdp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent" />


           <ImageView
               android:id="@+id/img_location"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:src="@drawable/ic_location_blue"
               android:layout_marginStart="@dimen/_20sdp"
               app:layout_constraintBottom_toBottomOf="@id/img_arrw_back"
                app:layout_constraintTop_toTopOf="@id/img_arrw_back"
                app:layout_constraintStart_toEndOf="@id/img_arrw_back"/>


             <TextView
                 android:id="@+id/txt_pick_up"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                  android:text="Pick Up"
                  android:textColor="@color/black"
                  android:textSize="12sp"
                 android:layout_marginStart="@dimen/_5sdp"
                  android:textAllCaps="false"
                  android:fontFamily="@font/inter_semibold"
                 app:layout_constraintStart_toEndOf="@id/img_location"
                 app:layout_constraintTop_toTopOf="@id/img_location"/>


          <TextView
              android:id="@+id/txt_sharma_ji_sweets"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Sharma ji Sweets"
              android:textColor="@color/black"
              android:textSize="12sp"
              android:textAllCaps="false"
              android:layout_marginTop="@dimen/_5sdp"
              android:fontFamily="@font/inter_regular"
              app:layout_constraintStart_toStartOf="@id/img_location"
              app:layout_constraintTop_toBottomOf="@id/img_location"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_down_black"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="@id/txt_sharma_ji_sweets"
                app:layout_constraintTop_toTopOf="@id/txt_sharma_ji_sweets"
                app:layout_constraintStart_toEndOf="@id/txt_sharma_ji_sweets"/>

         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_1sdp"
             android:layout_marginBottom="@dimen/_15sdp"
             android:fontFamily="@font/inter_regular"
             android:text="B-154, Noida 63, Noida 201301"
             android:textAllCaps="false"
             android:textColor="#220301"
             android:textSize="14sp"
             android:layout_marginEnd="@dimen/_10sdp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="@id/txt_sharma_ji_sweets"
             app:layout_constraintTop_toBottomOf="@id/txt_sharma_ji_sweets" />



     </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>